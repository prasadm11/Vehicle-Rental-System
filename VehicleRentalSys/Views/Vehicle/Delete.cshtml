@model VehicleRentalSys.Models.Vehicle

@{
    ViewData["Title"] = "Delete Vehicle";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h2 class="text-danger text-center">Delete Vehicle</h2>
        <p class="text-center text-muted">Are you sure you want to delete this vehicle?</p>
        <hr />

        <div class="row">
            <div class="col-md-8 offset-md-2">
                <dl class="row">
                    <dt class="col-sm-4 fw-bold"> @Html.DisplayNameFor(model => model.Model)</dt>
                    <dd class="col-sm-8"> @Html.DisplayFor(model => model.Model) </dd>

                    <dt class="col-sm-4 fw-bold"> @Html.DisplayNameFor(model => model.Brand)</dt>
                    <dd class="col-sm-8"> @Html.DisplayFor(model => model.Brand) </dd>

                    <dt class="col-sm-4 fw-bold"> @Html.DisplayNameFor(model => model.Type)</dt>
                    <dd class="col-sm-8"> @Html.DisplayFor(model => model.Type) </dd>

                    <dt class="col-sm-4 fw-bold"> @Html.DisplayNameFor(model => model.RentalPricePerDay)</dt>
                    <dd class="col-sm-8 fw-bold text-success">₹@Html.DisplayFor(model => model.RentalPricePerDay)</dd>

                    <dt class="col-sm-4 fw-bold"> @Html.DisplayNameFor(model => model.IsAvailable)</dt>
                    <dd class="col-sm-8">
                        @if (Model.IsAvailable)
                        {
                            <span class="badge bg-success">Available</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Not Available</span>
                        }
                    </dd>
                </dl>

                <form asp-action="Delete" class="mt-4 text-center">
                    <input type="hidden" asp-for="VehicleId" />

                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash-alt"></i> Delete
                    </button>
                    <a asp-action="GetAllVehicles" class="btn btn-secondary ms-2">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}
