@model VehicleRentalSys.Models.Vehicle

@{
    ViewData["Title"] = "Vehicle Details";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0"><i class="fas fa-car"></i> Vehicle Details</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4 fw-bold">Model:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Model)</dd>

                <dt class="col-sm-4 fw-bold">Brand:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Brand)</dd>

                <dt class="col-sm-4 fw-bold">Type:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Type)</dd>

                <dt class="col-sm-4 fw-bold">Rental Price Per Day:</dt>
                <dd class="col-sm-8 fw-bold text-success">₹@Html.DisplayFor(model => model.RentalPricePerDay)</dd>


                <dt class="col-sm-4 fw-bold">Availability:</dt>
                <dd class="col-sm-8">
                    @if (Model.IsAvailable)
                    {
                        <span class="badge bg-success">Available</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Not Available</span>
                    }
                </dd>
            </dl>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Edit" asp-route-id="@Model?.VehicleId" class="btn btn-warning mx-2">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a asp-action="GetAllVehicles" class="btn btn-secondary mx-2">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}
