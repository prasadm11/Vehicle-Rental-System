@* <h2>Access Denied</h2> *@
@* <p>You do not have permission to access this page.</p> *@
@* <a asp-controller="Account" asp-action="Login">Return to Login</a> *@


@{
    ViewData["Title"] = "Access Denied";
}

<div class="container d-flex justify-content-center align-items-center" style="height: 80vh;">
    <div class="card shadow-lg p-5 text-center">
        <div class="card-body">
            <h1 class="text-danger">
                <i class="bi bi-exclamation-triangle-fill"></i> Access Denied
            </h1>
            <p class="text-muted mt-3">
                You do not have the necessary permissions to access this page.
            </p>

            <div class="alert alert-warning mt-3">
                <strong>Why am I seeing this?</strong> <br />
                - You may not be logged in. <br />
                - Your account may not have the required privileges.
            </div>

            <p class="text-muted">
                If you believe this is a mistake, please contact the administrator.
            </p>

            <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg mt-3">
                <i class="bi bi-box-arrow-in-right"></i> Return to Login
            </a>
        </div>
    </div>
</div>
