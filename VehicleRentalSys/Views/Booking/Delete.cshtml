@model VehicleRentalSys.Models.Booking

@{
    ViewData["Title"] = "Delete Booking";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg p-4 rounded">
                <h2 class="text-center text-danger">⚠️ Confirm Deletion</h2>
                <p class="text-center text-muted">Are you sure you want to delete this booking?</p>
                <hr />

                <dl class="row">
                    <dt class="col-sm-4 fw-bold">Start Date</dt>
                    <dd class="col-sm-8 text-primary">@Html.DisplayFor(model => model.StartDate)</dd>

                    <dt class="col-sm-4 fw-bold">End Date</dt>
                    <dd class="col-sm-8 text-primary">@Html.DisplayFor(model => model.EndDate)</dd>

                    <dt class="col-sm-4 fw-bold">Total Amount</dt>
                    <dd class="col-sm-8 text-success fw-bold">₹@Html.DisplayFor(model => model.TotalAmount)</dd>

                    <dt class="col-sm-4 fw-bold">Vehicle</dt>
                    <dd class="col-sm-8 text-primary">@Html.DisplayFor(model => model.Vehicle.Brand)</dd>

                    <dt class="col-sm-4 fw-bold">User</dt>
                    <dd class="col-sm-8 text-primary">@Html.DisplayFor(model => model.User.Email)</dd>
                </dl>

                <form asp-action="Delete" method="post" class="mt-4">
                    <input type="hidden" asp-for="BookingId" />

                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-danger btn-lg">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                        <a asp-action="GetAllBookings" class="btn btn-secondary btn-lg">
                            <i class="bi bi-arrow-left-circle"></i> Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
