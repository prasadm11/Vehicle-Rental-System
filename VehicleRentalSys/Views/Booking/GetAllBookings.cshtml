@model IEnumerable<VehicleRentalSys.Models.Booking>

@{
    ViewData["Title"] = "Get All Bookings";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4 rounded">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="text-primary">📋 All Bookings</h2>
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Create New Booking
            </a>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered align-middle">
                <thead class="table-dark text-center">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.StartDate)</th>
                        <th>@Html.DisplayNameFor(model => model.EndDate)</th>
                        <th>@Html.DisplayNameFor(model => model.TotalAmount)</th>
                        <th>@Html.DisplayNameFor(model => model.Vehicle)</th>
                        <th>@Html.DisplayNameFor(model => model.User)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.StartDate)</td>
                            <td>@Html.DisplayFor(modelItem => item.EndDate)</td>
                            <td class="fw-bold text-success">₹@Html.DisplayFor(modelItem => item.TotalAmount)</td>
                            <td>@Html.DisplayFor(modelItem => item.Vehicle.Brand)</td>
                            <td>@Html.DisplayFor(modelItem => item.User.Email)</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.BookingId" class="btn btn-warning btn-sm">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@item.BookingId" class="btn btn-info btn-sm text-white">
                                    <i class="bi bi-eye"></i> Details
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.BookingId" class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

