@model VehicleRentalSys.Models.User

@{
    ViewData["Title"] = "Delete User";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg rounded">
                <div class="card-header bg-danger text-white text-center">
                    <h3>Delete User</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning text-center">
                        <i class="fas fa-exclamation-triangle"></i>
                        Are you sure you want to delete this user?
                    </div>
                    <dl class="row">
                        <dt class="col-sm-4 fw-bold">Name</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                        <dt class="col-sm-4 fw-bold">Email</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                        <dt class="col-sm-4 fw-bold">Password</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Password)</dd>

                        <dt class="col-sm-4 fw-bold">Role</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Role)</dd>
                    </dl>
                </div>
                <div class="card-footer text-center">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="UserId" />
                        <div class="btn-group">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Delete
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}
